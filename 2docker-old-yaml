version: "2.4"

services:
  db:
    image: postgres:15
    environment:
      POSTGRES_USER: finapp
      POSTGRES_PASSWORD: finapp
      POSTGRES_DB: finapp
    volumes:
      - db-data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U finapp -d finapp"]
      interval: 5s
      timeout: 5s
      retries: 5

  web:
    build:
      context: ./app
      dockerfile: Dockerfile
    environment:
      #   DATABASE_URL: "postgresql://finapp:finapp@db/finapp"
      - DATABASE_URL=postgresql://finapp:finapp@db:5432/finapp
      - FLASK_APP= src/app.py
    ports:
      - "5000:5000"
    depends_on:
      db:
        condition: service_healthy

  nginx:
    image: nginx:stable
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/ssl:/etc/nginx/ssl:ro
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - web

volumes:
  db-data:

